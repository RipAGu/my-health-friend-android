<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/profileLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/signature_color"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/nameImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <ImageView
                android:text="프로필사진\n미설정"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle_white"
                android:padding="20dp"
                android:src="@mipmap/humanprofile"/>
            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="갓효석"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/badgeLayout"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.6"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameImageLayout"
            app:layout_constraintBottom_toTopOf="@+id/heartBeatCount"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <ImageView
                    android:id="@+id/badge1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/badge2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/badge1"
                    app:layout_constraintEnd_toStartOf="@id/badge3"/>
                <ImageView
                    android:id="@+id/badge3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/badge2"
                    app:layout_constraintEnd_toStartOf="@id/badge4"
                    />
                <ImageView
                    android:id="@+id/badge4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/badge3"
                    app:layout_constraintEnd_toStartOf="@id/badge5"/>
                <ImageView
                    android:id="@+id/badge5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="10dp">
                <ImageView
                    android:id="@+id/badge6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/badge7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/badge6"
                    app:layout_constraintEnd_toStartOf="@id/badge8"/>
                <ImageView
                    android:id="@+id/badge8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/badge7"
                    app:layout_constraintEnd_toStartOf="@id/badge9"
                    />
                <ImageView
                    android:id="@+id/badge9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/badge8"
                    app:layout_constraintEnd_toStartOf="@id/badge10"
                    />
                <ImageView
                    android:id="@+id/badge10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/circle_gray"
                    android:scaleType="fitXY"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heartBeatCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintTop_toBottomOf="@+id/badgeLayout"
            app:layout_constraintStart_toEndOf="@+id/nameImageLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/circle_rounded_shite"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rpmImage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                app:layout_constraintStart_toEndOf="@+id/nameImageLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/red_heart"/>
            <TextView
                android:fontFamily="@font/nanum_square_regular"
                android:id="@+id/RPM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="186 RPM"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp">
            </TextView>

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:padding="10dp"
        android:id="@+id/profileLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileLayout1"
        android:orientation="vertical"
        android:background="@color/signature_color2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:fontFamily="@font/nanum_square_regular"
                android:id="@+id/career"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="운동구력 - 2년"
                android:textColor="@color/white"
                android:background="@color/signature_color2">
            </TextView>
            <TextView
                android:fontFamily="@font/nanum_square_regular"
                android:id="@+id/genre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="관심장르 - 파워리프팅"
                android:textColor="@color/white"
                android:background="@color/signature_color2">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:fontFamily="@font/nanum_square_regular"
                android:id="@+id/ability"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/signature_color2"
                android:text="수행능력 - 3대 400"
                android:textColor="@color/white"></TextView>
            <TextView
                android:fontFamily="@font/nanum_square_regular"
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="운동시간 - 오전,오후,저녁,새벽"
                android:textColor="@color/white"
                android:background="@color/signature_color2">
            </TextView>
        </LinearLayout>
        <TextView
            android:fontFamily="@font/nanum_square_regular"
            android:layout_marginVertical="5dp"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지역 - 인천광역시 미추홀구 용현동"
            android:textColor="@color/white"
            android:paddingHorizontal="10dp"
            android:background="@color/signature_color2"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        app:tabIndicatorColor="@color/black"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabTextColor="@color/black"

        app:layout_constraintTop_toBottomOf="@id/profileLayout2">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자기소개"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 운동영상"
            />




    </com.google.android.material.tabs.TabLayout>




    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragmentBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_signature_bright_purple"
        app:layout_constraintBottom_toTopOf="@+id/editBar"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editBar"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">


        <ImageButton
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/editgear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="3dp"
            android:layout_marginRight="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
