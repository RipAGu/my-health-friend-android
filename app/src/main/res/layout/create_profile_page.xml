<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:background="@drawable/main_theme_color">
    <ScrollView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/editTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_marginVertical="30dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="\n\n\n\n\n\n프로필 사진"
                android:textColor="@color/silver"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <EditText
                    android:id="@+id/nickNameEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rounded_white"
                    android:textColorHint="@color/silver"
                    android:hint="닉네임"
                    android:textSize="20dp"
                    android:maxLength="15"
                    android:inputType="text"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/rounded_gray"
                    android:text="중복확인"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rounded_white"
                    android:textColorHint="@color/silver"
                    android:hint="주소"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/findAdressBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/rounded_gray"
                    android:text="주소찾기"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/introduceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/rounded_white"
                android:textColorHint="@color/silver"
                android:hint="자기소개입력"
                android:textSize="20dp"
                android:maxLength="250"/>

            <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/rounded_white"
                        android:textColorHint="@color/silver"
                        android:hint="운동장르"
                        android:textSize="20dp"/>

                    <ImageButton
                        android:id="@+id/fitnessListBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_gray"
                        android:paddingHorizontal="5dp"
                        android:src="@drawable/reverse_triangle"
                        android:scaleType="fitCenter"
                        android:padding="10dp"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/checkboxLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckBox
                        android:layout_marginTop="1dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:text="test1"
                        android:buttonTint="@color/silver"
                        android:textColor="@color/silver"
                        />
                    <CheckBox
                        android:layout_marginTop="1dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:text="test1"
                        android:buttonTint="@color/silver"
                        android:textColor="@color/silver"
                        />
                    <CheckBox
                        android:layout_marginTop="1dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:text="test1"
                        android:buttonTint="@color/silver"
                        android:textColor="@color/silver"
                        />
                    <CheckBox
                        android:layout_marginTop="1dp"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:text="test1"
                        android:buttonTint="@color/silver"
                        android:textColor="@color/silver"
                        />


                </LinearLayout>



            </LinearLayout>



            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/careerEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/rounded_white"
                android:textColorHint="@color/silver"
                android:hint="운동경력 (선택)"
                android:textSize="20dp"/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/answerEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/rounded_white"
                android:textColorHint="@color/silver"
                android:hint="나이 (선택)"
                android:textSize="20dp"/>


            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/createProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                android:text="회원가입"/>
        </LinearLayout>
    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>